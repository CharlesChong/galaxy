@import 'lib';

[data-page-type~="review"] .page {
    .review-table {
        border-collapse: separate; 
        width: 100%;
        
        thead tr th {
            text-align: left;
            padding-bottom: 10px;
        }

        tbody td {
            padding: 5px 0;
            &:not(:last-child) {
                padding-right: 10px;
            }
        }

        .review-buttons {
            text-align: right;
            .btn {
                margin-left: 10px;
            }
        }
    }
}
