@import 'lib';

$btn-height = 20px;
$spinner-height = 18px;
[data-page-type~="review"] .page {
    .review-table {
        border-collapse: separate; 
        width: 100%;
        
        thead tr th {
            text-align: left;
            padding-bottom: 10px;
        }

        tbody td {
            padding: 5px 0;
            &:not(:last-child) {
                padding-right: 10px;
            }
        }

        .review-buttons {
            text-align: right;
            .btn {
                margin-left: 10px;
                position: relative;
                .spinner {
                    background-size: $btn-height;
                    height: $btn-height;
                    left: 50%;
                    margin-left: -($spinner-height / 2);
                    margin-top: -($spinner-height / 2);
                    position: absolute;
                    top: 50%;
                    width: $btn-height;
                }
            }
        }
    }
}