@import 'lib';

.description-preview {
    display: none;
    padding: 10px;
}

.description-preview>*:first-child {
    margin-top:0;
}

.description-preview>*:last-child {
    margin-bottom:0;
}

.description-preview a {
    color:#4183C4;
    text-decoration:none;
}

.description-preview a:hover {
    text-decoration:underline;
}

.description-preview h1,
.description-preview h2,
.description-preview h3,
.description-preview h4,
.description-preview h5,
.description-preview h6 {
    margin:20px 0 10px;
    padding:0;
    font-weight:bold;
    -webkit-font-smoothing:antialiased;
}

.description-preview tt, 
.description-preview code {
    font-size:inherit;
}

.description-preview h1 {
    color:#333;
    font-size:28px;
}

.description-preview h2 {
    border-bottom:1px solid #ccc;
    color:#333;
    font-size:24px;
}

.description-preview h3 {
    font-size:18px;
}
 
.description-preview h4 {
    font-size:16px;
}

.description-preview h5 {
    font-size:14px;
}

.description-preview h6 {
    color:#777;
    font-size:14px;
}

.description-preview p,
.description-preview blockquote,
.description-preview ul,
.description-preview ol,
.description-preview dl,
.description-preview li,
.description-preview table,
.description-preview pre {
    margin: 17px 0;
}

.description-preview hr {
    background:transparent url('../../images/modules/pulls/dirty-shade.png') repeat-x 0 0;
    border:0 none;
    color:#ccc;
    height:4px;
    padding:0;
}

.description-preview>h2:first-child,
.description-preview>h1:first-child,
.description-preview>h1:first-child+h2,
.description-preview>h3:first-child,
.description-preview>h4:first-child,
.description-preview>h5:first-child,
.description-preview>h6:first-child {
    margin-top:0;
    padding-top:0;
}

.description-preview h1+p,
.description-preview h2+p,
.description-preview h3+p,
.description-preview h4+p,
.description-preview h5+p,
.description-preview h6+p {
    margin-top:0;
}

.description-preview li p.first {
    display:inline-block;
}

.description-preview ul,
.description-preview ol {
    padding-left:30px;
}

.description-preview ul li>:first-child,
.description-preview ol li>:first-child {
    margin-top:0;
}

.description-preview ul li>:last-child,
.description-preview ol li>:last-child {
    margin-bottom:0;
}

.description-preview dl {
    padding:0;
}

.description-preview dl dt {
    font-size:14px;
    font-weight:bold;
    font-style:italic;
    padding:0;
    margin:15px 0 5px;
}

.description-preview dl dt:first-child {
    padding:0;
}

.description-preview dl dt>:first-child {
    margin-top:0;
}

.description-preview dl dt>:last-child {
    margin-bottom:0;
}

.description-preview dl dd {
    margin:0 0 15px;
    padding:0 15px;
}

.description-preview dl dd>:first-child {
    margin-top:0;
}

.description-preview dl dd>:last-child {
    margin-bottom:0;
}

.description-preview blockquote {
    border-left:4px solid #DDD;
    padding:0 15px;
    color:#777;
}

.description-preview blockquote>:first-child {
    margin-top:0;
}

.description-preview blockquote>:last-child {
    margin-bottom:0;
}

.description-preview table {
    padding:0;
    border-collapse: collapse;
    border-spacing: 0;
    font-size: 100%;
    font: inherit;
}

.description-preview table tr {
    border-top:1px solid #ccc;
    background-color:#fff;
    margin:0;
    padding:0;
}

.description-preview table tr:nth-child(2n) {
    background-color:#f8f8f8;
}

.description-preview table tr th {
    font-weight:bold;
}

.description-preview table tr th,
.description-preview table tr td {
    border:1px solid #ccc;
    text-align:left;
    margin:0;
    padding:6px 13px;
}

.description-preview table tr th>:first-child,
.description-preview table tr td>:first-child {
    margin-top:0;
}

.description-preview table tr th>:last-child,
.description-preview table tr td>:last-child {
    margin-bottom:0;
}

.description-preview img {
    max-width:100%;
}

.description-preview span.frame {
    display:block;
    overflow:hidden;
}

.description-preview span.frame>span {
    border:1px solid #ddd;
    display:block;
    float:left;
    overflow:hidden;
    margin:13px 0 0;
    padding:7px;
    width:auto;
}

.description-preview span.frame span img {
    display:block;
    float:left;
}

.description-preview span.frame span span {
    clear:both;
    color:#333;
    display:block;
    padding:5px 0 0;
}

.description-preview span.align-center {
    display:block;
    overflow:hidden;
    clear:both;
}

.description-preview span.align-center>span {
    display:block;
    overflow:hidden;
    margin:13px auto 0;
    text-align:center;
}

.description-preview span.align-center span img {
    margin:0 auto;
    text-align:center;
}

.description-preview span.align-right {
    display:block;
    overflow:hidden;
    clear:both;
}

.description-preview span.align-right>span {
    display:block;
    overflow:hidden;
    margin:13px 0 0;
    text-align:right;
}

.description-preview span.align-right span img {
    margin:0;
    text-align:right;
}

.description-preview span.float-left {
    display:block;
    margin-right:13px;
    overflow:hidden;
    float:left;
}

.description-preview span.float-left span {
    margin:13px 0 0;
}

.description-preview span.float-right {
    display:block;
    margin-left:13px;
    overflow:hidden;
    float:right;
}

.description-preview span.float-right>span {
    display:block;
    overflow:hidden;
    margin:13px auto 0;
    text-align:right;
}

.description-preview code,
.description-preview tt {
    margin:0 2px;
    padding:0 5px;
    white-space:nowrap;
    border:1px solid #eaeaea;
    background-color:#f8f8f8;
    border-radius:3px;
}

.description-preview pre>code {
    margin:0;
    padding:0;
    white-space:pre;
    border:none;
    background:transparent;
}

.description-preview .highlight pre,
.description-preview pre {
    background-color:#f8f8f8;
    border:1px solid #ccc;
    font-size:13px;
    line-height:19px;
    overflow:auto;
    padding:6px 10px;
    border-radius:3px;
}

.description-preview pre code,
.description-preview pre tt {
    background-color:transparent;
    border:none;
}
