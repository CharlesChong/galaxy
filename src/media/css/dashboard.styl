// For styles relating to dashboard screens (curation dashboard, review dashboard etc.)

@import 'lib';

$iconSize = 56px;

.dashboard-table {
    width: 100%;

    thead tr th {
        text-align: left;
        padding-bottom: 10px;
    }

    tbody td, & > td {
        padding: 5px 0;

        + td {
            padding-left: 10px;
        }
    }

    .dashboard-buttons {
        text-align: right;

        a {
            margin: 0 8px;
        }
        .btn {
            margin-left: 10px;
        }

        .secondary-buttons {
            display: inline-block;
            margin-left: 10px;
            font-size: 1.25em;
            vertical-align: middle;
        }
    }

    .game-title-container {
        padding: 12px 0;
        .game-icon {
            background: no-repeat;
            background-size: contain;
            background-position: center;
            float: left;
            height: $iconSize;
            margin-right: 20px;
            width: $iconSize;
        }
        .game-title {
            color: $buttonColorTeal;
            display: inline-block;
            font-size: $bigFontSize;
            height: $iconSize;
            line-height: $iconSize;
        }
    }

    .game-date-container {
        .game-date-title {
            color: $colorGrayUltraLight;
            font-size: $smallFontSize;
            font-weight: normal;
        }
        .game-date {
            .date-abs {
                font-weight: 600;
            }
            .date-rel {
                color: $colorGrayUltraLight;
                margin-left: 3px;
            }
        }
    }

    .cell-container {
        .cell-title {
            color: $colorGrayUltraLight;
            font-size: $smallFontSize;
            font-weight: normal;
        }
        .cell-content {
            font-weight: 600;
        }
        .status-approved {
            color: $colorLightGreen;
        }
        .status-pending, 
        .status-rejected,
        .status-disabled,
        .status-deleted {
            color: $colorGray;
        }
    }
}

.curation-page-title {
    flex: none;
    width: 80%;
}

.curation-table {
    .curation-entry {
        .curation-draggable {
            color: $buttonColorGray;
            cursor: move;
            vertical-align: middle;
            visibility: hidden;
        }

        &:hover .curation-draggable {
            visibility: visible;
        }
    }


    .curation-status {

        .status-span {
            color: $colorGrayLight;
            font-size: 14px;
        }

        .status-approved {
            color: $colorLightGreen;
        }

        .status-pending,
        .status-rejected,
        .status-disabled,
        .status-deleted {
            color: $colorGray;
        }

    }

    .curation-title {
        a {
            color: $colorTealLink;
            font-size: 26px;
            line-height: 1;
            vertical-align: middle;
        }
        .game-icon {
            margin-right: 10px;
            vertical-align: middle;
            width: 64px;
        }
    }
}

.feature-game {
    left: auto;
    min-height: 100px;
    right: 8%;
    top: 160px;
    width: 500px;

    &:before {
        border: transparent solid 10px;
        border-bottom-color: $modalBackgroundColor;
        content: '';
        display: block;
        height: 0;
        position: absolute;
        right: 20%;
        top: -20px;
        width: 0;
        z-index: 60;
    }

    h3 {
        margin-bottom: 10px;
    }
}

.game-results {
    background: #888;
    list-style: none;

    li {
        color: #bbb;
        height: 40px;
        line-height: 40px;
        padding: 0 10px;
        position: relative;

        &:hover {
            background: #aaa;
            color: #ddd;
        }

        .feature-btn {
            display: inline-block;
            vertical-align: middle;
            visibility: hidden;

            &.show {
                visibility: visible;
            }
        }

        .game-result-name {
            display: inline-block;
            vertical-align: middle;
            width: 370px;
        }

        .highlight {
            color: #eee;
            font-weight: bold;
        }
    }
}

[data-page-type~="review"] .page {
    .status-title {
        margin-bottom: 25px;
        position: relative;
        h1 {
            color: $colorGrayDark;
            display: inline-block;
            margin-bottom: 0;
        }
        #select-status {
            margin-left: 25px;
            position: absolute;
            top: 30%;
        }
    }

    .grid-cell {
        margin: 0 5%;
    }
}

[data-page-type~="developer-dashboard"] .page {
    .title {
        margin-bottom: 25px;
        position: relative;
        h1 {
            color: $colorGrayDark;
            display: inline-block;
            margin-bottom: 0;
        }
        #submit-new-game-btn {
            float: right;
        }
    }

    .grid-cell {
        margin: 0 5%;
    }
}
