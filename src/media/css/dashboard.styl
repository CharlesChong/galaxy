// For styles relating to dashboard screens (curation dashboard, review dashboard etc.);

@import 'lib';

.dashboard-table {
    border-collapse: separate; 
    width: 100%;
    
    thead tr th {
        text-align: left;
        padding-bottom: 10px;
    }

    tbody td {
        padding: 5px 0;
    }

    tbody td + td {
        padding-left: 10px;
    }

    .dashboard-buttons {
        text-align: right;
        .btn {
            margin-left: 10px;
        }
    }
}

[data-page-type~="curation"] .page {

    .curation-page-title {
        flex: none;
        width: 80%;
    }

    .curation-table {
        .curation-status {
            

            .status-span {
                color: $colorGrayLight;
                font-size: 14px;
            }

            .public-game-status {
                color: $colorLightGreen;
            }

            .private-game-status {
                color: $colorGray;
            }

        }

        .curation-title {
            a {
                color: $colorTealLink;
                font-size: 26px;
                vertical-align: middle;
            }
            img {
                vertical-align: middle;
                width: 64px;
                height: 64px;
            }
        }
    }
}
