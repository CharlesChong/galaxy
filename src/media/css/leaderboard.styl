@import 'lib';

[data-page-type~="board"] .page {

	.board-del a {
		float: right;
		vertical-alignment: middle;
	}

	.board-name a {
		vertical-alignment: middle;
	}

	.board-slug a {
		vertical-alignment: middle;
	}

	.boards-table {
		width: 50%;
		margin-bottom: 40px;

		td {
			padding-bottom: 5px;
		}

		th {
			text-align: left;
		}
	}

	.create-board {
		margin-top: 20px;
		width: 50%;

		input {
			font-size: 20px;
		}

		p {
		 	margin-bottom: 10px;

		 	+ p {
		 		margin-top: 0px;
		 	} 
		}
	}
}
