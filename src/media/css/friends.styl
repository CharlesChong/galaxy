@import 'lib';

[data-page-type~="leaf"] .page {
    h1 {
        color: $flamin-hot-cheetos-orange;
        line-height: 1;
    }
}

[data-page-type~="profile"] .page {
    h1 .avatar {
        margin-right: 10px;
    }
}

[data-page-type~="friends"] .page {
    section {
        margin-top: 30px;
    }

    .user-search,
    .friends-list {
        width: 50%;
    }
    .user-search {
        margin-top: 15px;
    }
    .friends-list {
        list-style: none;
        padding: 15px 0 45px;

        li + li {
            margin-top: 10px;
        }
        .btn {
            float: right;
            margin-left: 15px;
        }
    }

    .profile-link {
        display: block;
        float: left;
        ellipsis();
        line-height: 32px;
    }
    .user-results .profile-link {
        width: 300px;
    }
    .avatar {
        float: left;
        margin-right: 7px;
    }
    .no-results:last-child {
        margin-bottom: 0;
    }
}
