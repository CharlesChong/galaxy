@import 'lib';

[data-page-type~="game"] {
    .page {
        &:before {
            background: #fdfe98 url(../img/homepage/hero.jpg) 50% 0 repeat-y;
            background-size: auto 785px;
            content: "";
            display: block;
            height: 215px;
            left: 0;
            opacity: .1;
            position: absolute;
            top: 0;
            width: 100%;
        }
        h1 {
            color: #eff;
            line-height: 1;
        }
    }

    .game-masthead {
        min-height: 100px;
        position: relative;
        z-index: 2;

        h1 {
            ellipsis();
            margin-bottom: 0;
        }
    }

    .game-icon {
        background: no-repeat;
        background-size: contain;
        height: 64px;
        left: 35px;
        position: absolute;
        top: 35px;
        width: 64px;
    }

    .game-release-info {
        // padding-right: 170px = 35px (padding) + 120px (install button) + 15px (padding)
        // padding-left: 114px = 35px (padding) + 64px (icon) + 15px (padding)
        font-size: 12px;
        padding: 35px 170px 35px 114px;
        position: relative;

        h1 {
            margin-top: 5px;
        }

        .author {
            color: #ccc;
            font-size: 14px;
            font-style: italic;
            margin: 5px 0;
        }
        .author, .author a {
            color: #ddd;
        }

        dl, dt, dd {
            margin: 0;
        }
        dt {
            color: #999;
            float: left;
            font-weight: 400;
            margin-right: 5px;
        }
        dd {
            color: #c7c7c7;
            font-weight: 600;
            &:after {
                clear: both;
                content: "";
                display: block;
            }
        }
    }

    .game-details {
        background: $colorWhite;
        padding: 35px;
        h1 {
            color: $colorGray;
        }
        h2 {
            color: $colorGrayDark;
            font-size: 24px;
            line-height: 26px;
        }
    }

    .game-install {
        position: absolute;
        right: 35px;
        top: 35px;
        width: 120px;

        .btn {
            display: block;
            margin-bottom: 10px;
            width: 100%;
        }
    }
}
