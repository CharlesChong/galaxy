[class^="icon-"],
[class*=" icon-"] {
    display: inline-block;
    width: 18px;
    height: 18px;
    margin-top: 1px;
    *margin-right: .3em;
    line-height: 18px;
    vertical-align: text-top;
    background-repeat: no-repeat;
    background-size: 18px 18px;
}

.icon-chrome {
    background-image: url('../img/new-game-details/icon-chrome.png');
}

.icon-controller {
    background-image: url('../img/new-game-details/icon-controller.png');
}

.icon-firefox {
    background-image: url('../img/new-game-details/icon-firefox.png');
}
